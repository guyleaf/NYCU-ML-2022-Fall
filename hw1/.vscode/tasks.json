{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: 建置檔案 (Debug)",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-std=c++14",
                "-Wall",
                "-Wextra",
                "-Wno-deprecated-declarations",
                "-pedantic-errors",
                "-m64",
                "-fsanitize=address"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}